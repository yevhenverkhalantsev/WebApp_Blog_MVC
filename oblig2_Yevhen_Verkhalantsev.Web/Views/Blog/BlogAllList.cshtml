@using oblig2_Yevhen_Verkhalantsev.Services.UserServices
@model oblig2_Yevhen_Verkhalantsev.Web.Models.Blog.BlogListHttpGetViewModel
@inject ICurrentUserContext currentUserContext

<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">All blogs</h6>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-white">
                        <th scope="col">Date</th>
                        <th scope="col">Author</th>
                        <th scope="col">Title</th>
                        <th scope="col">More info</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var blog in Model.Blogs)
                    {
                        
                        <tr>
                            <td>@blog.CreatedAt.ToString("dd MMM yyyy")</td>
                            <td>@blog.User.Username</td>
                            <td>@blog.Title</td>
                            <td>
                                <a class="btn btn-sm btn-primary" href="@Url.Action("BlogDetails","Blog", new {@id = blog.Id})">Detail</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
